@model IEnumerable<MovieDatabase.Core.Entities.Catalog.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered shadow">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="form-group">
                        <img style="width: 30pt; height: 50pt" alt="avatar" src="~/Files/Images/Movies/@item.ImagePath" />
                    </div>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary icon-wrapper">
                        <i class="fas fa-info"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning icon-wrapper">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning icon-wrapper">
                        <i class="fas fa-tags"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning icon-wrapper">
                        <i class="fas fa-users"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger icon-wrapper">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .icon-wrapper {
        width: 3rem;
    }
</style>