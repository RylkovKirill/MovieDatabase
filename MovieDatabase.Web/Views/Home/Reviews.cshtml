@model IEnumerable<Review>

@{
    ViewData["Title"] = "Reviews";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered shadow">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Name)
                </td>
                <td>
                    <a asp-action="CreateReview" asp-route-id="@item.Id" class="btn btn-primary icon-wrapper">
                        <i class="fas fa-info"></i>
                    </a>
                    <a asp-action="EditReview" asp-route-id="@item.Id" class="btn btn-warning icon-wrapper">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="DeleteReview" asp-route-id="@item.Id" class="btn btn-danger icon-wrapper">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
